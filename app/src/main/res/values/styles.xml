<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:buttonStyle">@style/portfolioButton</item>-->
    </style>

    <style name="headerStyle" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="portfolioButton" parent="android:Widget.Button">
        <item name="android:width">240dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">#AED581</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="capstoneButton" parent="portfolioButton">
        <item name="android:backgroundTint">#33691E</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
